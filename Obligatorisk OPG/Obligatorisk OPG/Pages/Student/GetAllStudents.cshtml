@page
@model Obligatorisk_OPG.GetAllStudentsModel
@{
    ViewData["Title"] = "GetStudents";
}
<style>
    body {
        background-color: #1A1A1A;
    }

    h1 {
        color: #FFFFFF;
        margin-top: 50px;
        margin-bottom: 30px;
        text-align: center;
    }

    h4 {
        color: #FF6F61;
        margin-top: 30px;
        margin-bottom: 20px;
    }

    table {
        margin-top: 30px;
        color: #FFFFFF;
    }

    input[type="text"] {
        background-color: #303030;
        border: none;
        border-radius: 3px;
        color: #FFFFFF;
        padding: 5px;
        margin-right: 5px;

    }

    input[type="submit"] {
        background-color: #FF6F61;
        border: none;
        border-radius: 3px;
        color: #FFFFFF;
        padding: 5px 10px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #FF8A81;
        }

    a {
        color: #FFFFFF;
    }

        a:hover {
            color: #FF6F61;
        }

    th {
        text-align: center;
    }

    input[type="text"] {
        color: white;
    }

</style>
<h1> List of Students </h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="get" class="form-inline">
                <div class="form-group">
                    <label for="AdressCriteria" class="mr-2">Search By Address:</label>
                    <input type="text" asp-for="AdressCriteria" class="form-control mr-2" />
                </div>
                <button type="submit" class="btn btn-outline-light">Filter</button>
                <a asp-page="/Student/GetAllStudents" class="btn btn-outline-light ml-2">Back to Full List</a>
            </form>

            <form method="get" class="form-inline mt-2">
                <div class="form-group">
                    <label for="IdCriteria" class="mr-2">Search By ID:</label>
                    <input type="text" asp-for="IdCriteria" class="form-control mr-2" />
                </div>
                <button type="submit" class="btn btn-outline-light">Filter</button>
                <a asp-page="/Student/GetAllStudents" class="btn btn-outline-light ml-2">Back to Full List</a>
            </form>

            <div class="table-responsive">
                <table class="table table-dark table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Leasings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.Students)
                        {
                            <tr>
                                <td>@student.Student_No</td>
                                <td>@student.Name</td>
                                <td>@student.Address</td>
                                <td>
                                    <p>
                                        <a asp-page="/Leasing/GetLeasing_Student" asp-page-handler="GetLeasing_Student" asp-route-aid="@student.Student_No" class="btn btn-outline-light btn-sm">Show Leasings</a>
                                    </p>
                                </td>
                            </tr>
                        }
                        </
