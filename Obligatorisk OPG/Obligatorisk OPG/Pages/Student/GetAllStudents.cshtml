@page
@model Obligatorisk_OPG.GetAllStudentsModel
@{
    ViewData["Title"] = "GetStudents";
}
<h1>Students</h1>

<p>
    <a asp-page="/Student/GetAllStudents">GetAllStudents New Student</a>
</p>

<form>
    <p>
        Search By Adress: <input type="text" asp-for="AdressCriteria" />
        <input type="submit" value="Filter" />
        <a asp-page="/Student/GetAllStudents">Back to Full List </a>
    </p>
</form>
<form>
    <p>
        Search By Id: <input type="text" asp-for="IdCriteria" />
        <input type="submit" value="Filter" />
        <a asp-page="/Student/GetAllStudents">Back to Full List </a>
    </p>
</form>

<h4 style="color:red"> List of students</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Adress
            </th>
        </tr>
        <style>
            body {
                background-color: #f5f5f5;
                color: #333;
                font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif, sans-serif;
                font-size: 16px;
                line-height: 1.5;
            }

            h4 {
                color: #333;
                font-weight: bold;
                font-size: 24px;
                text-align: center;
                margin-top: 40px;
                margin-bottom: 20px;
            }

            table {
                border-collapse: collapse;
                width: 100%;
                margin-top: 20px;
            }

            th, td {
                text-align: left;
                padding: 8px;
            }

            th {
                background-color: #333;
                color: #fff;
                font-weight: bold;
                font-size: 18px;
                text-transform: uppercase;
            }

            tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            tr:hover {
                background-color: #ddd;
            }

            .button {
                display: inline-block;
                background-color: #333;
                color: #fff;
                font-weight: bold;
                font-size: 16px;
                padding: 12px 24px;
                margin-top: 40px;
                border-radius: 5px;
                text-decoration: none;
                transition: background-color 0.3s;
                cursor: pointer;
                border: none;
                outline: none;
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            }

                .button:hover {
                    background-color: #444;
                }
        </style>
    </thead>
    <tbody>



        @foreach (var student in Model.Students)
        {
            <tr>
                <td>  @student.Student_No </td>
                <td> @student.Name </td>
                <td> @student.Address </td>
                <td>
                    <p>
                        <a asp-page="/Leasing/GetLeasing_Student" asp-page-handler="GetLeasing_Student" asp-route-aid="@student.Student_No"> Show Leasings for Student  </a>
                    </p>
                </td>

            </tr>
        }
</table>
