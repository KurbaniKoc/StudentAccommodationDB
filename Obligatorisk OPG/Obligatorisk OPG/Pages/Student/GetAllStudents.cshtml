<h4 style="color:red"> List of students</h4>
<table class="table">
    <thead>
        <tr>class="btn-secondary active">
            <th> 
                StudentNo 
           </th>
            <th>
                Name
           </th>
            <th> 
                Adress
           </th>
        </tr>
    </thead>
    <tbody>

         @if(Model.Student != null)
        { 
        <tr>
            <td>  @Model.Student.StudentNo </td>
            <td> @Model.Student.Name </td>
            <td> @Model.Student.Adress </td>
            </tr>
            }

        else if (Model.Students != null)

            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>  @student.StudentNo </td>
                    <td> @student.Name </td>
                    <td> @student.Adress </td>
                    <td>
                        <p>
                            <a asp-page="/Students/GetAllStudents" asp-page-handler="GetAllByStudents" asp-route-aid="@student.StudentNo"> Student´s GetAll  </a>
                        </p>
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Student/Create" asp-route-id="@student.StudentNo">New Student</a>
                        </p>
                    </td>

                    <td>
                        <p>
                            <a asp-page="/Students/Delete" asp-route-id="@student.StudentNo">Delete Student</a>
                        </p>
                    </td>
                </tr>
            }
</table>
