@page
@model Obligatorisk_OPG.GetRoomsModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Rooms</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #333;
            color: #fff;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 16px;
        }

        table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            margin-bottom: 1rem;
            background-color: #444;
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #fff;
            padding: 10px 0;
        }

        th,
        td {
            padding: 0.75rem;
            text-align: left;
            vertical-align: top;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        th {
            background-color: #555;
            font-weight: 600;
        }

        tr:nth-child(even) {
            background-color: #555;
        }

        a.button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #FFD700;
            color: #000;
            text-decoration: none;
            border-radius: 4px;
            margin-right: 10px;
        }

        a.button:hover {
            background-color: #FFA500;
            color: #000;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <h1>List of Rooms</h1>
    <table>
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Type</th>
                <th>Price</th>
                <th>Dormitory Number</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Rooms)
            {
                <tr>
                    <td>@item.RoomNo</td>
                    <td>@item.Types</td>
                    <td>@item.Price</td>
                    <td>@item.DormitoryNo</td>
                    
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align:center">
        <a href="/Leasing/GetAllAvailableRooms" class="button">See all available rooms for leasing</a>
    </div>
</body>
</html>
