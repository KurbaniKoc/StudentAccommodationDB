@page
@model Obligatorisk_OPG.GetRoomsModel
@{
    ViewData["Dormitory"] = "GetRooms";
}

<style>
    body {
        background-color: #1A1A1A;
    }

    h4 {
        color: #FFFFFF;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h4 class="text-center mb-4">List of Rooms</h4>
            <div class="table-responsive">
                <table class="table table-dark table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Room Number</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Dormitory Number</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Rooms)
                        {
                            <tr>
                                <td>@item.RoomNo</td>
                                <td>@item.Types</td>
                                <td>@item.Price</td>
                                <td>@item.DormitoryNo</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
