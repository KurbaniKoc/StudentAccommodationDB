<!DOCTYPE html>
<html lang="en">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Obligatorisk_OPG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #1A1A1A;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #FFFFFF;
        }

        .navbar {
            background-color: #1E1E1E !important;
        }

        .nav-link {
            color: #FFFFFF !important;
        }

            .nav-link:hover {
                color: #FFC107 !important;
            }

        .table {
            background-color: #1E1E1E !important;
            color: #FFFFFF;
        }

            .table th {
                color: #FFC107;
                border: none !important;
            }

            .table td {
                border-color: #FFC107 !important;
            }

        .btn-outline-light {
            border-color: #FFFFFF !important;
            color: #FFFFFF !important;
        }

            .btn-outline-light:hover {
                background-color: #FFFFFF !important;
                color: #1E1E1E !important;
            }

        .footer {
            background-color: #1E1E1E !important;
            color: #FFFFFF;
        }
    </style>
    <link rel="stylesheet" href="~/Obligatorisk_OPG.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-white border-bottom box-shadow mb-3">
            ...
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-black" asp-area="" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" asp-area="" asp-page="/Privacy">Privacy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" asp-area="" asp-page="/Dormitory/GetDormitory">Dormitories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" asp-area="" asp-page="/Room/GetRooms">Rooms</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" asp-area="" asp-page="/Leasing/GetLeasing">Leasings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" asp-area="" asp-page="/Student/GetAllStudents">Students</a>
                </li>
            </ul>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Obligatorisk_OPG - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
