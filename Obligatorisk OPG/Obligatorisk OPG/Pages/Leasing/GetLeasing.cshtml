@page
@model Obligatorisk_OPG.GetLeasingModel
@{
    ViewData["Dormitory"] = "GetLeasings";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Leasings</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <style>
       

        .btn-primary {
            outline none;
            background-color: #FFD700;
            color: #000;
            border-radius: 4px;
            padding: 10px 20px;
            text-decoration: none;
        }

            .btn-primary:hover {
                background-color: #FFA500;
                color: #000;
            }
        body {
            background-color: #333;
            color: #fff;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 16px;
        }

        table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            margin-bottom: 1rem;
            background-color: #444;
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #fff;
            padding: 10px 0;
        }

        th,
        td {
            padding: 0.75rem;
            text-align: left;
            vertical-align: top;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        th {
            background-color: #555;
            font-weight: 600;
        }

        tr:nth-child(even) {
            background-color: #555;
        }

        a.button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #FFD700;
            color: #000;
            text-decoration: none;
            border-radius: 4px;
            margin-right: 10px;
        }

            a.button:hover {
                background-color: #FFA500;
                color: #000;
            }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <h1>List of Leasings</h1>
    <table>
        <thead>
            <tr>
                <th>LeasingNo</th>
                <th>DateFrom</th>
                <th>DateTo</th>
                <th>StudentNo</th>
                <th>RoomNo</th>
                <th>DormitoryNumber</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Leasings)
            {
                <tr>
                    <td>@item.LeasingNo</td>
                    <td>@item.DateFrom</td>
                    <td>@item.DateTo</td>
                    <td>@item.StudentNo</td>
                    <td>@item.RoomNo</td>
                    <td>@item.DormitoryNumber</td>
                    <td>
                        <a href="#" class="button">Delete Leasing</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align:center">
        <a href="/Leasing/GetAllAvailableRooms" class="button">See all available rooms for leasing</a>
    </div>

    
</body>
</html>


