@page
@model Obligatorisk_OPG.GetLeasingModel
@{
    ViewData["Dormitory"] = "GetLeasings";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Rooms</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
            color: #333;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif, sans-serif;
            font-size: 16px;
            line-height: 1.5;
        }

        h4 {
            color: #333;
            font-weight: bold;
            font-size: 24px;
            text-align: center;
            margin-top: 40px;
            margin-bottom: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #333;
            color: #fff;
            font-weight: bold;
            font-size: 18px;
            text-transform: uppercase;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #ddd;
        }

        .button {
            display: inline-block;
            background-color: #333;
            color: #fff;
            font-weight: bold;
            font-size: 16px;
            padding: 12px 24px;
            margin-top: 40px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
            cursor: pointer;
            border: none;
            outline: none;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        }

            .button:hover {
                background-color: #444;
            }
    </style>
</head>

<h4 style="color:red"> List of Leasings</h4>
<table class="table">
    <thead>
        <tr>
            <th> LeasingNo </th>
            <th> DateFrom  </th>
            <th> DateTo  </th>
            <th> StudentNo</th>
            <th> RoomNo</th>
            <th> DormitoryNumber</th>

        </tr>
 
    </thead>
    <tbody>

        @foreach (var item in Model.Leasings)
        {
            <tr>
                <td>  @item.LeasingNo </td>
                <td> @item.DateFrom </td>
                <td> @item.DateTo </td>
                <td> @item.StudentNo </td>
                <td> @item.RoomNo </td>
                <td> @item.DormitoryNumber </td>

                <td>
                    <p>
                        <a asp-page="/Leasing/GetLeasing" asp-page-handler="LeasingByLeasingNo" asp-route-aid="@item.LeasingNo"> Delete Leasing  </a>
                    </p>
                </td>

            </tr>
        }
</table>

<a asp-page="/Leasing/CreateLeasing" class="btn btn-primary btn-block">Create New Leasing</a>