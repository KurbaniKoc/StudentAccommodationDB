@page
@model Obligatorisk_OPG.GetAllAvailableRoomsModel
@{
}

<style>
    body {
        background-color: #1A1A1A;
    }

    h2 {
        color: #FFFFFF;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">List of all available Rooms</h2>
            <div class="table-responsive">
                <table class="table table-dark table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Room Number</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Rooms)
                        {
                            <tr>
                                <td>@item.RoomNo</td>
                                <td>@item.Types</td>
                                <td>@item.Price</td>
                                <td>
                                    <a class="btn btn-primary" href="/Leasing/CreateLeasing?roomNo=@item.RoomNo">Lease</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
