@page
@model Obligatorisk_OPG.ViewDormitoryModel
@{
}


<h4 style="color:red"> List of Dormitories</h4>
<table class="table">
    <thead>
        <tr>
            <th> Dormitory Number </th>
            <th> Name  </th>
            <th> Address  </th>
        </tr>
        <style>
            body {
                background-color: #f5f5f5;
                color: #333;
                font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif, sans-serif;
                font-size: 16px;
                line-height: 1.5;
            }

            h4 {
                color: #333;
                font-weight: bold;
                font-size: 24px;
                text-align: center;
                margin-top: 40px;
                margin-bottom: 20px;
            }

            table {
                border-collapse: collapse;
                width: 100%;
                margin-top: 20px;
            }

            th, td {
                text-align: left;
                padding: 8px;
            }

            th {
                background-color: #333;
                color: #fff;
                font-weight: bold;
                font-size: 18px;
                text-transform: uppercase;
            }

            tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            tr:hover {
                background-color: #ddd;
            }

            .button {
                display: inline-block;
                background-color: #333;
                color: #fff;
                font-weight: bold;
                font-size: 16px;
                padding: 12px 24px;
                margin-top: 40px;
                border-radius: 5px;
                text-decoration: none;
                transition: background-color 0.3s;
                cursor: pointer;
                border: none;
                outline: none;
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            }

                .button:hover {
                    background-color: #444;
                }
        </style>
    </thead>
    <tbody>

        @*  @if (Model.Dormitory != null)
        {
        <tr>
        <td>  @Model.Dormitory.Dormitory_No </td>
        <td> @Model.Dormitory.Name </td>
        <td> @Model.Dormitory.Address </td>
        </tr>
        }*@


        @* else if (Model.Dormitory != null)*@

        @foreach (var item in Model.Dormitories)
        {
            <tr>
                <td>  @item.Dormitory_No </td>
                <td> @item.Name </td>
                <td> @item.Address </td>

                <td>
                    <p>
                        <a asp-page="/Room/GetRoom_Dormitory" asp-page-handler="GetRoom_Dormitory" asp-route-aid="@item.Dormitory_No"> Show Rooms in Dormitory  </a>
                    </p>
                </td>
                <td>
                    <p>
                        <a asp-page="/Dormitory/GetStudent_Room" asp-page-handler="GetStudent_Room" asp-route-did="@item.Dormitory_No"> Show Room With Students  </a>
                    </p>
                </td>
                <td>
                    <p>
                        <a asp-page="/Dormitory/GetLeasing_Room" asp-page-handler="GetLeasing_Room" asp-route-lid="@item.Dormitory_No"> Show Rooms With Leasing  </a>
                    </p>
                </td>

            </tr>
        }


</table>
